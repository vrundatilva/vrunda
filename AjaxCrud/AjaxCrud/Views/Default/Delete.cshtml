<script>
    $(document).ready(function () {
        $("#btn").click(function () {
            $.ajax({
                url: "/Default/Delete",
                type: "POST",
                data: { id:@Model.EmpId},
                dataType: "text",
                success: function (msg) {
                    alert(msg);
                    window.location.href = "/Default/Index";
                }

            });
        });
    });
</script>
