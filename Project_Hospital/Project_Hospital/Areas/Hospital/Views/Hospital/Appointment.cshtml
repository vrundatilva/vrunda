@model Project_Hospital.EDM.Appointment

@{
    ViewData["Title"] = "Appointment";
    Layout = "~/Areas/Hospital/Views/Hospital_Layout.cshtml";
}
<style>
    .form-controlnew {
        width: 90%;
    }
    .form-group label {
        color: black;
        text-align:left;
    }
</style>
<h2>Appointment</h2>

<hr />
<div class="cols-grids panel-widget">
    <div class="row form-controlnew form-group label">
        <div class="col-md-6">
            <form asp-action="Appointment" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <label asp-for="AppId" class="control-label"></label>
                    <input asp-for="AppId" class="form-control" />
                    <span asp-validation-for="AppId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PtId" class="control-label"></label>
                    @*<input asp-for="PtId" class="form-control" />*@
                    <select asp-for="PtId" class="form-control" asp-items="@(new SelectList(ViewBag.pat_id,"PatId","Fname"))"></select>
                    <span asp-validation-for="PtId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HopId" class="control-label"></label>
                    @*<input asp-for="HopId" class="form-control" />*@
                    <select asp-for="HopId" class="form-control" asp-items="@(new SelectList(ViewBag.hospital_id,"HospId","Hname"))"></select>
                    <span asp-validation-for="HopId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DId" class="control-label"></label>
                    @*<input asp-for="DId" class="form-control" />*@
                    <select asp-for="DId" class="form-control" asp-items="@(new SelectList(ViewBag.doc_id,"Doc_Id","Fname"))"></select>
                    <span asp-validation-for="DId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AppoDate" class="control-label"></label>
                    <input asp-for="AppoDate" class="form-control" type="date" />
                    <span asp-validation-for="AppoDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AppoStatus" class="control-label"></label>
                    <input asp-for="AppoStatus" class="form-control" />
                    <span asp-validation-for="AppoStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>

</div>

