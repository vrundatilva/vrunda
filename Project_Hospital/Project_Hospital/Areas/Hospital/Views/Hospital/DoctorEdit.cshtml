@model Project_Hospital.EDM.Doctor
@using Project_Hospital.EDM;
@inject Hospital_DetailContext _context

@{
    ViewData["Title"] = "DoctorEdit";
    Layout = "~/Areas/Hospital/Views/Hospital_Layout.cshtml";
}

<h2>DoctorEdit</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoctorEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appointments" class="control-label"></label>
                <input asp-for="Appointments" class="form-control" readonly />
                <span asp-validation-for="Appointments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fname" class="control-label"></label>
                <input asp-for="Fname" class="form-control" />
                <span asp-validation-for="Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lname" class="control-label"></label>
                <input asp-for="Lname" class="form-control" />
                <span asp-validation-for="Lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qualification" class="control-label"></label>
                <input asp-for="Qualification" class="form-control" />
                <span asp-validation-for="Qualification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialitites" class="control-label"></label>
                <input asp-for="Specialitites" class="form-control" />
                <span asp-validation-for="Specialitites" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HId" class="control-label"></label>
                <select asp-for="HId" class="form-control" asp-items="@(new SelectList(ViewBag.hospital_id,"HospId","Hname"))"></select>
                <span asp-validation-for="HId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
